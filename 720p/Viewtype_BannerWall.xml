  <include name="BannerWallHor">
    <control type="image">
      <posx>57</posx>
      <posy>98</posy>
      <width>20</width>
      <height>524</height>
      <texture>wall/wall_arrow.png</texture>
      <visible>Control.IsVisible(51)+!Control.HasFocus(109)</visible>
      <animation effect="slide" start="-100" end="0" delay="800" time="400" easing="out" tween="cubic">WindowOpen</animation>
    </control>
    <control type="image">
      <posx>1203</posx>
      <posy>98</posy>
      <width>20</width>
      <height>524</height>
      <texture flipx="true">wall/wall_arrow.png</texture>
      <visible>Control.IsVisible(51)+!Control.HasFocus(109)</visible>
      <animation effect="slide" start="100" end="0" delay="800" time="400" easing="out" tween="cubic">WindowOpen</animation>
    </control>
    <control type="panel" id="51">
      <posx>80</posx>
      <posy>90</posy>
      <width>1120</width>
      <height>555</height>
      <onleft>51</onleft>
      <onright>51</onright>
      <onup>SetFocus(9000)</onup>
      <ondown>60</ondown>
      <visible>Container.Content(tvshows)</visible>
      <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(109)">Conditional</animation>
      <viewtype label="$LOCALIZE[31231]">Wide Icon</viewtype>
      <pagecontrol>60</pagecontrol>
      <scrolltime>300</scrolltime>
      <preloaditems>2</preloaditems>
      <orientation>horizontal</orientation>
      <include condition="!Skin.HasSetting(TVShowsUsePosters)">nativebanners</include>
      <include condition="Skin.HasSetting(TVShowsUsePosters)">nativeposters</include>
    </control>
    <control type="scrollbar" id="60">
      <posx>305</posx>
      <posy>670</posy>
      <width>670</width>
      <height>41</height>
      <animation effect="fade" start="100" end="0" time="400" condition="Control.HasFocus(109)">Conditional</animation>
      <visible allowhiddenfocus="true">Control.HasFocus(60)</visible>
      <texturesliderbackground border="14,0,14,0">views/scrollBarH.png</texturesliderbackground>
      <texturesliderbar border="14,0,14,0">views/scrollBarH_bar.png</texturesliderbar>
      <texturesliderbarfocus border="14,0,14,0">views/scrollBarH_bar_focus.png</texturesliderbarfocus>
      <textureslidernib>views/scrollBarNib.png</textureslidernib>
      <textureslidernibfocus>views/scrollBarNib.png</textureslidernibfocus>
      <pulseonselect>yes</pulseonselect>
      <onup>51</onup>
      <ondown>51</ondown>
      <showonepage>false</showonepage>
      <orientation>horizontal</orientation>
    </control>

  </include>
