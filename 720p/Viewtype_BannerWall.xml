      <include condition="Skin.HasSetting(TVShowsUsePosters)">nativeposters</include>
    </control>
    <control type="scrollbar" id="60">
      <posx>1227</posx>
      <posy>92</posy>
      <width>65</width>
      <height>548</height>
      <visible allowhiddenfocus="true">Control.HasFocus(60)</visible>
      <texturesliderbackground>views/scrollbarbacklist.png</texturesliderbackground>
      <texturesliderbar>-</texturesliderbar>
      <texturesliderbarfocus>-</texturesliderbarfocus>
      <textureslidernib>views/scrollbarnub-nofocus.png</textureslidernib>
      <textureslidernibfocus>views/scrollbarnub-focus.png</textureslidernibfocus>
      <orientation>vertical</orientation>
      <showonepage>false</showonepage>
      <pulseonselect>yes</pulseonselect>
      <onleft>51</onleft>
      <onright>51</onright>
    </control>
  </include>
  <include name="BannerWall">
    <control type="group">
      <visible>Control.IsVisible(51)</visible>
      <include>VisibleFadeEffect</include>
      <control type="image">
        <width>1280</width>
        <height>720</height>
        <texture>common/black.png</texture>
        <colordiffuse>FFffffff</colordiffuse>
        <visible>!Skin.HasSetting(bannerwalldark)+!Control.HasFocus(109)</visible>
        <include>Animation_WindowFade200</include>
        <animation effect="fade" start="0" end="100" time="400">VisibleChange</animation>
      </control>
      <control type="image">
        <width>1280</width>
        <height>720</height>
        <texture>wall/wall_bg.png</texture>
        <include>Animation_WindowFade200</include>
        <animation effect="fade" start="90" end="90" time="400" condition="Skin.HasSetting(bannerwalldark)">Conditional</animation>
      </control>

      <include condition="!Skin.HasSetting(BannerwallVertical)">BannerWallHor</include>
      <include condition="Skin.HasSetting(BannerwallVertical)">BannerWallVert</include>
      <control type="group">
        <visible>!Control.HasFocus(109)+!Control.HasFocus(60)</visible>
        <include>Animation_HideMultiplex</include>
        <include>SecondLabelFloor</include>
        <include>FirstLabelFloor</include>
      </control>
    </control>
  </include>
